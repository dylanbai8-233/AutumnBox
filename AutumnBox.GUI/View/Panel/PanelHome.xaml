<UserControl x:Class="AutumnBox.GUI.View.Panel.PanelHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Foreground="{DynamicResource MainBackgroundForegroundBrush}"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodel="clr-namespace:AutumnBox.GUI.ViewModel"
             xmlns:panel="clr-namespace:AutumnBox.GUI.View.Panel"
             mc:Ignorable="d" d:DesignWidth="821">
    <UserControl.DataContext>
        <viewmodel:VMHome/>
    </UserControl.DataContext>
    <Grid>
        <DockPanel>
            <TextBlock Margin="10" FontSize="6" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Foreground="Gray">But our love was a song sung by a dying swan</TextBlock>

            <StackPanel>
                <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top">
                    <panel:PanelCst/>
                    <panel:PanelTips/>
                </WrapPanel>
                <panel:PanelDefaultInformation></panel:PanelDefaultInformation>
            </StackPanel>

        </DockPanel>
    </Grid>
</UserControl>
