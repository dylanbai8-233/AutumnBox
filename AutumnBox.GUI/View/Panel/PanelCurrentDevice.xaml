<UserControl x:Class="AutumnBox.GUI.View.Panel.PanelCurrentDevice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.Panel"
             xmlns:panel="clr-namespace:AutumnBox.GUI.View.Panel"
             mc:Ignorable="d" d:DesignHeight="566" d:DesignWidth="821">
    <Grid>
        <panel:PanelDeviceDetails Margin="10,10,207,0" VerticalAlignment="Top" Height="219"></panel:PanelDeviceDetails>
        <local:PanelReboot Margin="0,10,10,0" Height="219" VerticalAlignment="Top" HorizontalAlignment="Right" Width="192"></local:PanelReboot>

        <TabControl Margin="10,245,10,10" SelectedIndex="{Binding TabSelectedIndex,Mode=TwoWay}" Background="{x:Null}" BorderBrush="{DynamicResource PrimaryLightBrush}">
            <TabItem  Style="{DynamicResource AtmbxTabItem}" TabIndex="0" Header="{DynamicResource PanelCurrentDevicePoweron}" Margin="-2,-2,-14,0"  FontSize="16">
                <local:PanelExtension  TargetDeviceState="Poweron" Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Style="{DynamicResource AtmbxTabItem}" TabIndex="1"  Header="{DynamicResource PanelCurrentDeviceRecovery}" Margin="14,-2,-24,0"  FontSize="16">
                <local:PanelExtension  TargetDeviceState="Recovery" Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Style="{DynamicResource AtmbxTabItem}" TabIndex="2"  Header="{DynamicResource PanelCurrentDeviceSideload}" Margin="14,-2,-24,0"  FontSize="16">
                <local:PanelExtension TargetDeviceState="Sideload" Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Style="{DynamicResource AtmbxTabItem}" TabIndex="3"  Header="{DynamicResource PanelCurrentDeviceFastboot}" Margin="24,-2,-27,0"  FontSize="16">
                <local:PanelExtension   TargetDeviceState="Fastboot" Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Style="{DynamicResource AtmbxTabItem}" TabIndex="4"  Header="{DynamicResource PanelCurrentDeviceUnauthorized}" Margin="27,-2,-36,0"  FontSize="16">
                <local:PanelExtension TargetDeviceState="Unauthorized" Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Style="{DynamicResource AtmbxTabItem}" TabIndex="5"  Header="{DynamicResource PanelCurrentDeviceOffline}" Margin="36,-2,-46,0"  FontSize="16">
                <local:PanelExtension TargetDeviceState="Offline" Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Style="{DynamicResource AtmbxTabItem}" TabIndex="6"  Header="{DynamicResource PanelCurrentDeviceUnknown}" Margin="46,-2,-56,0"  FontSize="16">
                <local:PanelExtension TargetDeviceState="Unknown" Margin="0,0,0,0"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
