<Window x:Class="AutumnBox.GUI.View.Windows.RunningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutumnBox.GUI.View.Windows"
        mc:Ignorable="d"
        Title="{Binding Title}"
        MinHeight="350"
        MinWidth="450"
        WindowStartupLocation="CenterOwner"
        FontFamily="{DynamicResource AutumnBox.Font}"
        ResizeMode="CanResize" Height="474" Width="343.5" Closing="Window_Closing">
    <Grid Margin="1" Background="{DynamicResource MainBackgroundBrush}">
        <TextBox IsReadOnly="True"  Style="{x:Null}" BorderBrush="{DynamicResource PrimaryLightBrush}" Text="{Binding Output}" Margin="10,10,10,61" TextWrapping="Wrap" />
        <StackPanel VerticalAlignment="Bottom" Margin="10,0,10,10" Orientation="Horizontal">
            <ProgressBar Style="{DynamicResource MaterialDesignCircularProgressBar}" IsIndeterminate="True" Value="{Binding ProgressValue}" Height="35"  Width="35" Margin="0,0,20,0"  HorizontalAlignment="Left" />
            <TextBlock Text="{Binding Tip}"  Margin="0,0,20,0" Height="16" />
        </StackPanel>
    </Grid>
</Window>
