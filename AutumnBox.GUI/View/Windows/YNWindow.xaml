<Window x:Class="AutumnBox.GUI.View.Windows.YNWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutumnBox.GUI.View.Windows"
        mc:Ignorable="d"
        FontFamily="{DynamicResource AutumnBox.Font}"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        BorderThickness="1"
        BorderBrush="{DynamicResource PrimaryLightBrush}"
        MouseDown="Window_MouseDown"
        Title="This is your choice!" 
        MinWidth="350"
        MinHeight="200"
        ShowInTaskbar="False"
       Height="180" Width="280">
    <Grid Margin="5">
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Button FontSize="12" Click="Button_Click_1" Margin="5" Style="{DynamicResource MaterialDesignFlatButton}" HorizontalAlignment="Left" Content="{Binding BtnNO}"></Button>
                <Button FontSize="12" Click="Button_Click" Margin="5" Style="{DynamicResource MaterialDesignRaisedButton}" HorizontalAlignment="Right" Content="{Binding BtnYES}"></Button>
            </StackPanel>
            <ScrollViewer DockPanel.Dock="Bottom" Margin="10" Template="{DynamicResource AtmbxScrollViewer}">
                <TextBlock DockPanel.Dock="Top" FontSize="15" Text="{Binding Message}"/>
            </ScrollViewer>
        </DockPanel>
            
       
    </Grid>
</Window>
