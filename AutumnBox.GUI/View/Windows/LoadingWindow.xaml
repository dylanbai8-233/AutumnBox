<Window x:Class="AutumnBox.GUI.View.Windows.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutumnBox.GUI.View.Windows"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="LoadingWindow" Background="Black" MinHeight="100" MinWidth="350" Height="100" Width="333" MouseDown="Window_MouseDown">
    <Grid Margin="1" Background="White">
        <StackPanel Orientation="Horizontal" Margin="10">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Height="50" Width="50"/>
            <TextBlock FontSize="25" Margin="20,0,0,0" VerticalAlignment="Center" Text="{DynamicResource LoadingWindowMessage}"/>
        </StackPanel>
    </Grid>
</Window>
