<UserControl x:Class="AutumnBox.GUI.View.OfTheDay.MOTD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.OfTheDay"
             xmlns:viewmodel="clr-namespace:AutumnBox.GUI.ViewModel"
             FontFamily="{DynamicResource AutumnBox.Font}"
             Foreground="{DynamicResource MainBackgroundForegroundBrush}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <viewmodel:VMMotd/>
    </UserControl.DataContext>
    <Grid>
        <TextBox BorderThickness="0" Style="{x:Null}" TextWrapping="Wrap" BorderBrush="{DynamicResource PrimaryDarkBrush}" IsReadOnly="True" Text="{Binding Motd}"/>
    </Grid>
</UserControl>
