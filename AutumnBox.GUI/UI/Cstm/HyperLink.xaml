<UserControl x:Class="AutumnBox.GUI.UI.Cstm.HyperLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="mUserControl"
             xmlns:local="clr-namespace:AutumnBox.GUI.UI.Cstm"
             FontSize="20" Foreground="{DynamicResource ForegroundBrushKey}"
             mc:Ignorable="d" MinHeight="20" MinWidth="50" >
    <TextBlock  MouseEnter="TBMain_MouseEnter" MouseLeave="TBMain_MouseLeave" Foreground="{Binding Path=Foreground,ElementName=mUserControl}" x:Name="TBMain"  TextAlignment="Left" Style="{DynamicResource AtmbxTextBlockStyle}"  MouseDown="TBMain_MouseDown" Text="{Binding Path=Text,ElementName=mUserControl}"/>
</UserControl>
